{
  "expo": {
    "name": "Cuban-Serbia Visa Center",
    "slug": "cuban-serbia-visa",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "cuban-serbia",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "extra": {
      "backendUrl": "https://cuba-visa-hub.preview.emergentagent.com"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.cubanserbia.visa",
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "Seleccionar foto de perfil y documentos",
        "NSCameraUsageDescription": "Tomar fotos de documentos"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#0a1628"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.cubanserbia.visa",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png",
      "name": "Cuban-Serbia Visa Center",
      "shortName": "Cuban-Serbia",
      "description": "Gestión profesional de visados para cubanos que viajan a Serbia",
      "backgroundColor": "#0a1628",
      "themeColor": "#d4af37"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#0a1628"
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Necesitamos acceso a tu galería para subir fotos de perfil y documentos"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
